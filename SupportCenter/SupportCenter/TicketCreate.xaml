<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SupportCenter.TicketCreate">
  <StackLayout Orientation="Vertical" Padding="10">
  <Label Text="Account Id:" HorizontalOptions="Center" />
  <Entry x:Name="AccountId" HorizontalOptions="Center" Keyboard="Numeric"/>
      <Label Text="Problem" HorizontalOptions="Center"/>
      <Entry x:Name="Problem"></Entry>
      <Button x:Name="btCreate"
              Clicked="BtCreate_OnClicked" Text="Create your ticket!"></Button>
    </StackLayout>
  </ContentPage>